generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int            @id @default(autoincrement())
  email           String         @unique
  facebookUserId  String?
  facebookEmail   String?
  facebookPicture String?
  name            String?
  password        String
  createdAt       DateTime       @default(now())
  updatedUt       DateTime       @updatedAt
  pages           FacebookPage[]
  Message         Message[]
}

model FacebookPage {
  id             Int       @id @default(autoincrement())
  pageId         String    @unique
  name           String?
  accessToken    String
  userId         Int?
  user           User?     @relation(fields: [userId], references: [id])
  facebookUserId String?
  createdAt      DateTime  @default(now())
  updatedUt      DateTime  @updatedAt
  Message        Message[]
}

model Message {
  id             Int           @id @default(autoincrement())
  message        String?
  senderId       String
  facebookUserId String?
  userId         Int?
  pageId         Int?
  user           User?         @relation(fields: [userId], references: [id])
  page           FacebookPage? @relation(fields: [pageId], references: [id])
  createdAt      DateTime      @default(now())
  updatedUt      DateTime      @updatedAt
}
